<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/map"
    tools:context="com.example.simello.MapsActivity"
    android:name="com.google.android.gms.maps.SupportMapFragment" >

    <Button
        android:id="@+id/segnalaAbuso"
        android:layout_width="120dp"
        android:textAllCaps="false"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:text="@string/segnalaAbuso"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:background="@color/rosso"/>

    <Button
        android:id="@+id/annullaAiuto"
        android:textAllCaps="false"
        android:layout_width="120dp"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top"
        android:text="@string/annullaAiuto"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:background="@color/blueChiaro"/>

    </fragment>


</LinearLayout>