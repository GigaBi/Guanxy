<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/blueChiaro">




    <ImageButton
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:id="@+id/button3guida"
        android:src="@drawable/trofei"
        android:scaleType="fitXY"
        android:background="@null"
        android:layout_marginTop="270dp"
        android:layout_below="@+id/chiediAiuto"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        />


    <Button
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:textStyle="bold"
        android:text="@string/usare_guanxy"
        android:textColor="@color/white"
        android:id="@+id/buttonTextUsareGuanxy"
        android:src="@drawable/button_aiuto"
        android:background="@null"
        android:textAllCaps="false"
        android:textSize="25sp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginTop="5dp"


        />


    <ImageButton
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:id="@+id/button4guida"
        android:src="@drawable/autori"
        android:scaleType="fitXY"
        android:background="@null"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="185dp"
        android:layout_below="@+id/chiediAiuto"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        />


    <Button
        android:layout_width="178dp"
        android:layout_height="30dp"
        android:textStyle="bold"
        android:text="@string/premi"
        android:textColor="@color/white"
        android:id="@+id/buttonTextPremi"
        android:src="@drawable/button_aiuto"
        android:background="@null"
        android:textAllCaps="false"
        android:textSize="25sp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginLeft="175dp"
        android:layout_marginTop="5dp"/>


    <ImageButton
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:id="@+id/buttonUsareGuanxy"
        android:src="@drawable/usareguanxy"
        android:scaleType="fitXY"
        android:background="@null"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/chiediAiuto"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        />


    <Button
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:textStyle="bold"
        android:text="@string/trofei"
        android:textColor="@color/white"
        android:id="@+id/button8"
        android:src="@drawable/button_aiuto"
        android:background="@null"
        android:textAllCaps="false"
        android:textSize="25sp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginTop="235dp"
        android:layout_marginLeft="10dp"/>

    <ImageButton
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:id="@+id/button2guida"
        android:src="@drawable/premi"
        android:scaleType="fitXY"
        android:background="@null"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="185dp"
        android:layout_below="@+id/chiediAiuto"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        />

    <Button
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:textStyle="bold"
        android:text="@string/autori"
        android:textColor="@color/white"
        android:id="@+id/button6"
        android:src="@drawable/button_aiuto"
        android:background="@null"
        android:textAllCaps="false"
        android:textSize="25sp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginTop="235dp"
        android:layout_marginLeft="185dp"/>

    <Button
        android:text="@string/title_section1"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_height="60dp"
        android:layout_width="120dp"
        android:background="@drawable/button_selector"
        android:id="@+id/guanxy"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:textAllCaps="false"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/divider1"
        android:background="@drawable/divider"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/guanxy"
        android:layout_alignTop="@+id/guanxy" />

    <Button
        android:text="@string/title_section2"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:background="@drawable/button_selector"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:id="@+id/punti"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/divider1" />

    <Button
        android:text="@string/title_section3"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:background="@drawable/button_selector"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:textAllCaps="false"
        android:shadowRadius="5"
        android:id="@+id/guida"
        android:layout_marginBottom="0dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/divider2"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/divider2"
        android:background="@drawable/divider"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/punti"
        android:layout_alignTop="@+id/punti" />
</RelativeLayout>